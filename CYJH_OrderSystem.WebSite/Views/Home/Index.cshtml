@{
    ViewBag.Title = "点餐系统";
}

<script type="text/javascript">   
    var menuId=@ViewBag.CurrentMenu.Id;
</script>
<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!-->
<html lang="zh-CN" class="no-js">
<!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=9; IE=8; IE=7; IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title</title>
   
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="../../Content/js/html5shiv.min.js"></script>
      <script src="../../Content/js/respond.min.js"></script>
      <script src="../../Content/js/modernizr.js"></script>
       
    <![endif]-->

    <link rel="Stylesheet" href="../../Content/css/bootstrap.min.css" />
    <!--[if lt IE 9]>
         <link rel="Stylesheet" href="../../Content/css/cssforIE.css" />
    <![endif]-->

</head>
<body>

    <div class="container">
        <div class="jumbotron" style="background-color: #428bca;">
            <h1><p class="text-center" style="color:white">小小点餐工具</p></h1>

        </div>
        <div class="row">
            <div class="col-lg-8">
                <div class="panel panel-success ">

                    <div class="panel-heading">
                        <h4>菜单列表</h4>
                    </div>
                </div>
                <table class="table table-hover">
                    <tbody>
                        @{
                            foreach (var menu in ViewBag.RestaurantList) {
                                <tr>
                                    <td>@menu.RestaurantName</td>
                                    <td><a href="#" onclick="CreateOrder(@menu.Id)">开餐贴 >></a></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>


            <div class="col-lg-4">
                <div class="panel panel-danger ">

                    <div class="panel-heading">
                        <h4>4小时内的订单情况：</h4>
                    </div>
                </div>

                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>创建者</th>
                            <th>创建时间</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var order in @ViewBag.OrderIn4Hours) {
                                <tr>
                                    <td><a href="/Home/Order/@order.Id">@order.CreateName</a></td>
                                    <td>@order.CreateTime</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div>
            <div class="alert alert-warning" style="text-align:center;height:50px;"><strong style="color:red">！不支持IE8以下版本，360请使用极速模式</strong></div>
        </div>
    </div>


    <script src="../../Content/js/jquery-1.10.2.min.js"></script>
    <script src="../../Content/js/bootstrap.min.js"></script>
    <script src="../../Content/js/cookieoperation.js"></script>
    <script src="../../Content/js/jsondefine.js"></script>
    <script src="../../Content/js/index.js"></script>
</body>
</html>
